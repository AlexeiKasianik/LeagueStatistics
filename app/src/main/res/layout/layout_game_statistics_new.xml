<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/blue_shape">

        <ImageView
            android:id="@+id/imageViewStatisticGameOne"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageViewStatisticGameTwo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewStatisticGameOne"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageViewStatisticGameThree"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewStatisticGameOne"
            app:layout_constraintStart_toEndOf="@+id/imageViewStatisticGameOne"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageViewStatisticGameFour"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageViewStatisticGameOne"
            app:layout_constraintTop_toBottomOf="@+id/imageViewStatisticGameOne"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageViewStatisticGameFife"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="@+id/imageViewStatisticGameOne"
            app:layout_constraintTop_toBottomOf="@+id/imageViewStatisticGameOne"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewStatisticGameScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="14/5/12"
            android:textColor="#111111"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewStatisticGameTwo" />

        <TextView
            android:id="@+id/textViewStatisticGameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Время"
            android:textColor="#111111"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewStatisticGameThree"
            app:layout_constraintStart_toStartOf="@+id/textViewStatisticGameScore" />

        <TextView
            android:id="@+id/textViewStatisticGameTimeTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_regular"
            android:text="игры"
            android:textColor="#111111"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textViewStatisticGameTime"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatisticGameTime" />

        <TextView
            android:id="@+id/textViewStatisticGameKda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="@string/kda"
            android:textColor="#111111"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewStatisticGameTwo" />

        <TextView
            android:id="@+id/textViewStatisticGameKdaNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="5,2"
            android:textColor="#111111"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textViewStatisticGameKda"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatisticGameKda" />

        <TextView
            android:id="@+id/textViewStatisticGameTimeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="42,35"
            android:textColor="#111111"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewStatisticGameTimeTwo"
            app:layout_constraintStart_toStartOf="@+id/textViewStatisticGameKda" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>