<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="6">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/blue_shape"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/nameSummonerTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_regular"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/rangImageView"
            android:layout_width="0dp"
            android:src="@drawable/emblem_platinum"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.gmail.lyohakasianik.leaguestatistics.customView.CircleDiagram
            android:id="@+id/circleDiagram"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/buttonBackListGames"
        style="@style/buttonBack"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

</LinearLayout>